{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "keybinds": {
    "leader": "ctrl+n",
    "session_rename": "ctrl+r",
    "messages_half_page_up": "ctrl+b",
    "messages_half_page_down": "ctrl+f",
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true,
    },
  },
  "agent": {
    "code-reviewer": {
      "description": "Code review that should be ran before pushing code",
      "mode": "all",
      "temperature": 0.3,
      "prompt": "Review the ode for best practices,a bugs, edge cases, types, performace and security issues",
      "model": "anthropic/claude-sonnet-4-5-20250929",
    },
  },
}
